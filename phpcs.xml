<?xml version="1.0"?>
<ruleset name="Admin Coach Tours">
	<description>WordPress Coding Standards for Admin Coach Tours plugin.</description>

	<!-- What to scan -->
	<file>./admin-coach-tours.php</file>
	<file>./php</file>
	<file>./tests/php</file>

	<!-- Exclude patterns -->
	<exclude-pattern>vendor/*</exclude-pattern>
	<exclude-pattern>node_modules/*</exclude-pattern>
	<exclude-pattern>build/*</exclude-pattern>
	<exclude-pattern>assets/*</exclude-pattern>
	<exclude-pattern>languages/*</exclude-pattern>

	<!-- Show progress and sniff codes -->
	<arg value="ps"/>
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="parallel" value="8"/>

	<!-- WordPress Coding Standards -->
	<rule ref="WordPress"/>
	<rule ref="WordPress-Docs"/>
	<rule ref="WordPress-Extra"/>

	<!-- PHP Compatibility -->
	<rule ref="PHPCompatibility"/>
	<config name="testVersion" value="8.3-"/>

	<!-- WordPress specific configuration -->
	<config name="minimum_wp_version" value="6.8"/>

	<!-- Text domain -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="admin-coach-tours"/>
			</property>
		</properties>
	</rule>

	<!-- Prefixes -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="AdminCoachTours"/>
				<element value="act_"/>
				<element value="admin_coach_tours"/>
			</property>
		</properties>
	</rule>

	<!-- Allow short array syntax -->
	<rule ref="Generic.Arrays.DisallowShortArraySyntax.Found">
		<severity>0</severity>
	</rule>
	<rule ref="Universal.Arrays.DisallowShortArraySyntax.Found">
		<severity>0</severity>
	</rule>

	<!-- Allow short ternary (?:) -->
	<rule ref="Universal.Operators.DisallowShortTernary.Found">
		<severity>0</severity>
	</rule>

	<!-- Disable overly pedantic rules -->
	<rule ref="Squiz.Commenting.LongConditionClosingComment">
		<severity>0</severity>
	</rule>

	<!-- Exclude test files from certain rules -->
	<rule ref="WordPress.Files.FileName.InvalidClassFileName">
		<exclude-pattern>tests/*</exclude-pattern>
	</rule>
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<exclude-pattern>tests/*</exclude-pattern>
	</rule>

	<!-- Exclude doc comments for test bootstrap (mock classes) -->
	<rule ref="Squiz.Commenting">
		<exclude-pattern>tests/php/bootstrap.php</exclude-pattern>
		<exclude-pattern>tests/php/*Test.php</exclude-pattern>
	</rule>

	<!-- Exclude mixed OO/function declarations in test bootstrap -->
	<rule ref="Universal.Files.SeparateFunctionsFromOO.Mixed">
		<exclude-pattern>tests/php/bootstrap.php</exclude-pattern>
	</rule>

	<!-- Allow variable naming flexibility in tests -->
	<rule ref="WordPress.NamingConventions.ValidVariableName.VariableNotSnakeCase">
		<exclude-pattern>tests/*</exclude-pattern>
	</rule>

	<!-- Allow overriding globals in test mocks -->
	<rule ref="WordPress.WP.GlobalVariablesOverride.Prohibited">
		<exclude-pattern>tests/*</exclude-pattern>
	</rule>

	<!-- Allow strip_tags in tests -->
	<rule ref="WordPress.WP.AlternativeFunctions.strip_tags_strip_tags">
		<exclude-pattern>tests/*</exclude-pattern>
	</rule>

	<!-- Allow namespace declarations -->
	<rule ref="WordPress.NamingConventions.ValidFunctionName.FunctionNameInvalid">
		<exclude-pattern>php/*</exclude-pattern>
	</rule>

	<!-- Allow PSR-4 class filenames (PascalCase) instead of WordPress hyphenated lowercase -->
	<rule ref="WordPress.Files.FileName.NotHyphenatedLowercase">
		<exclude-pattern>php/*</exclude-pattern>
		<exclude-pattern>tests/php/*</exclude-pattern>
	</rule>
	<rule ref="WordPress.Files.FileName.InvalidClassFileName">
		<exclude-pattern>php/*</exclude-pattern>
	</rule>
</ruleset>
