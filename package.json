{
	"name": "admin-coach-tours",
	"version": "0.4.0",
	"description": "Interactive guided tours for WordPress admin",
	"author": "Per Soderlind",
	"license": "GPL-2.0-or-later",
	"main": "build/editor/index.js",
	"scripts": {
		"build": "wp-scripts build",
		"build:prod": "wp-scripts build --mode=production",
		"start": "wp-scripts start",
		"lint": "wp-scripts lint-js",
		"lint:fix": "wp-scripts lint-js --fix",
		"lint:css": "wp-scripts lint-style",
		"lint:css:fix": "wp-scripts lint-style --fix",
		"format": "wp-scripts format",
		"test:js": "vitest run",
		"test:js:watch": "vitest",
		"test:js:coverage": "vitest run --coverage",
		"test": "npm run test:js && composer test",
		"packages-update": "wp-scripts packages-update",
		"i18n": "npm run i18n:make-pot && npm run i18n:update-po && npm run i18n:make-mo && npm run i18n:make-json && npm run i18n:make-php",
		"i18n:make-pot": "wp i18n make-pot . languages/admin-coach-tours.pot --exclude=node_modules,vendor,tests,build --domain=admin-coach-tours",
		"i18n:update-po": "wp i18n update-po languages/admin-coach-tours.pot languages/",
		"i18n:make-mo": "wp i18n make-mo languages/",
		"i18n:make-json": "wp i18n make-json languages/ --no-purge",
		"i18n:make-php": "wp i18n make-php languages/"
	},
	"devDependencies": {
		"@testing-library/dom": "^10.4.1",
		"@testing-library/react": "^16.3.2",
		"@vitest/coverage-v8": "^4.0.18",
		"@wordpress/eslint-plugin": "^24.1.0",
		"@wordpress/scripts": "^31.4.0",
		"eslint": "^9.39.2",
		"jsdom": "^27.4.0",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@wordpress/api-fetch": "^7.39.0",
		"@wordpress/block-editor": "^15.12.0",
		"@wordpress/components": "^32.1.0",
		"@wordpress/compose": "^7.39.0",
		"@wordpress/data": "^10.39.0",
		"@wordpress/dom-ready": "^4.39.0",
		"@wordpress/element": "^6.39.0",
		"@wordpress/hooks": "^4.39.0",
		"@wordpress/i18n": "^6.12.0",
		"@wordpress/icons": "^11.6.0",
		"@wordpress/plugins": "^7.39.0"
	},
	"engines": {
		"node": ">=20.0.0",
		"npm": ">=10.0.0"
	}
}